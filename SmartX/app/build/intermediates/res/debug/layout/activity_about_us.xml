<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.About_us"

    >

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@mipmap/smartorange2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/aboutus"
        android:layout_alignEnd="@+id/aboutus"
        android:padding="-30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SmartX is a start-up company penetrating the innovative manufacturing market by introducing smart solutions aiming to make everyday life easier"
        android:id="@+id/aboutus"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/fbview"
        android:src="@mipmap/fbfinal"
        android:onClick="OnClick"
        android:layout_above="@+id/bird"
        android:layout_alignLeft="@+id/bird"
        android:layout_alignStart="@+id/bird"
        android:padding="10dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/bird"
        android:src="@mipmap/bird"
        android:onClick="OnClick"
        android:layout_marginBottom="87dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        />

</RelativeLayout>
