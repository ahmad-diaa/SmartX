<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.AddDevices"
    android:id="@+id/device_type">


    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/spinner_title1"
        style="@style/Base.TextAppearance.AppCompat.Widget.DropDownItem"
        android:textColor="#ffff4608"
        android:id="@+id/spinnertitle"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/device_spinner"
        android:layout_alignStart="@+id/device_spinner"
        android:layout_marginTop="46dp" />

    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/brand_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/type_title"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/brandtitle"
        android:layout_alignStart="@+id/brandtitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Device Brand"
        android:id="@+id/brandtitle"
        android:layout_above="@+id/brand_spinner"
        android:layout_alignLeft="@+id/device_spinner"
        android:layout_alignStart="@+id/device_spinner"
        android:layout_marginBottom="33dp"
        android:textColor="#ffff4608" />

</RelativeLayout>
