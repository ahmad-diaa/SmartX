<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartx.cookies.smartx"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="com.smartx.cookies.smartx.viewDevices"
            android:exported="true"
            android:label="@string/title_activity_view_devices" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.About_us"
            android:label="@string/app_name" />
        <!-- android:screenOrientation="portrait" -->
        <!-- android:configChanges="keyboardHidden|orientation|screenSize" -->

        <activity
            android:name="com.smartx.cookies.smartx.addRoomsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.addDevices"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_add_devices"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.ViewRooms"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="View Rooms"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.changePassword"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Change Password"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.renameRoomActivity"
            android:label="@string/title_activity_rename_room" >
        </activity>
        <activity
            android:name="com.smartx.cookies.smartx.changeInfo"
            android:label="@string/title_activity_change_info" >
        </activity>
    </application>

</manifest>