<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.AddPlug">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/plugname"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextbutton"
        android:nestedScrollingEnabled="true"
        android:onClick="changeInfo"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/plugname"
        android:layout_alignEnd="@+id/plugname" />

    <TextView android:text="Plug name:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_row="0"
        android:layout_column="0"
        android:textAlignment="center"
        android:textColor="#ffff4608"
        android:elegantTextHeight="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/plugid"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/texplugid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:text="Plug ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texplugid"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="#ffff4608"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/plugname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Plug"
        android:id="@+id/textView"
        android:textColor="#ffff4608"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
