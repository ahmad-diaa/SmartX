<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.Settings"
    android:id="@+id/laayout">

    <TextView android:text="Old Password" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oldPasswordLbl"
        android:textSize="23dp"
        android:layout_marginTop="117dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff4608" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/oldPassword"
        android:layout_below="@+id/oldPasswordLbl"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:id="@+id/textView4"
        android:textSize="23dp"
        android:textColor="#ffff4608"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/oldPasswordLbl"
        android:layout_alignEnd="@+id/oldPasswordLbl" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPassword"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/oldPassword"
        android:layout_alignStart="@+id/oldPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm New Password"
        android:id="@+id/textView5"
        android:textSize="23dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/newPassword"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff4608" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordConfirm"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/newPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/changePasswordButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="changePassword" /><![CDATA[



    " />


]]>
</RelativeLayout>
