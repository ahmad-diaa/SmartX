<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Layoutid"
    android:textAlignment="center">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/roomName"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addRoomButton"
        android:layout_alignStart="@+id/addRoomButton"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Room"
        android:id="@+id/addRoomButton"
        android:nestedScrollingEnabled="true"
        android:onClick="addRoomButton"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />

    <TextView android:text="Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomNameLabel"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignRight="@+id/roomIDLabel"
        android:layout_alignEnd="@+id/roomIDLabel"
        android:layout_alignBottom="@+id/roomName"
        android:layout_alignLeft="@+id/roomIDLabel"
        android:layout_alignStart="@+id/roomIDLabel"
        android:textAlignment="center"
        android:textColor="#ffff4608" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/RoomIDText"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/roomName"
        android:layout_alignLeft="@+id/roomName"
        android:layout_alignStart="@+id/roomName"
        android:layout_marginTop="71dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignBottom="@+id/RoomIDText"
        android:layout_toLeftOf="@+id/RoomIDText"
        android:layout_toStartOf="@+id/RoomIDText"
        android:layout_below="@+id/RoomIDText"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:text="Controller ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomIDLabel"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_above="@+id/textView2"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:textColor="#ffff4608" />

</RelativeLayout>
