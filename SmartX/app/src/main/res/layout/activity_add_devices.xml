<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.addDevices"
    android:id="@+id/addDevice">




    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:prompt="@string/spinner_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Device Type"
        style="@style/Base.TextAppearance.AppCompat.Widget.DropDownItem"
        android:textColor="#ffff4608"
        android:id="@+id/spinnertitle"
        android:layout_alignLeft="@+id/device_spinner"
        android:layout_alignStart="@+id/device_spinner"
        android:layout_alignTop="@id/device_spinner"

        android:layout_marginTop="-20dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Device"
        android:id="@+id/addDeviceButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:textColor="#ffffffff" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Widget.DropDownItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceID"
        android:textColor="#ffff4608"
        android:text="Controller ID"
        android:layout_below="@+id/device_spinner"
        android:layout_alignLeft="@+id/device_spinner"
        android:layout_alignStart="@+id/device_spinner"
        android:layout_marginTop="41dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/device_id"
        android:maxLength="20"
        android:layout_below="@+id/deviceID"
        android:layout_alignLeft="@+id/deviceID"
        android:layout_alignStart="@+id/deviceID" />

</RelativeLayout>
