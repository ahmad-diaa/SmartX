<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartx.cookies.smartx.changeInfo"
    android:textAlignment="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/email"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="104dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"


            android:text="ya mosahhel"></EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/changeInfoB"
            android:nestedScrollingEnabled="true"
            android:onClick="changeInfo"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />

        <TextView android:text="Email:" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:textColor="#ffff4608"
            android:elegantTextHeight="false"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/phone"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_below="@+id/phoneLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="asaasaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignBottom="@+id/phone"
            android:layout_toLeftOf="@+id/phone"
            android:layout_toStartOf="@+id/phone"
            android:layout_below="@+id/phone"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:text="Phone number:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ffff4608"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Edit Information"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/phoneLabel"
            android:layout_toEndOf="@+id/phoneLabel"
            android:textColor="#ffff4608" />


</RelativeLayout>
