<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartx.cookies.smartx" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name=".viewDevices"
            android:exported="true"
            android:label="@string/title_activity_view_devices" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".About_us"
            android:label="@string/app_name" />
        <!-- android:screenOrientation="portrait" -->
        <!-- android:configChanges="keyboardHidden|orientation|screenSize" -->

        <activity
            android:name=".addRoomsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddDevices"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_add_devices"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewRooms"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="View Rooms"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".RenameRoomActivity"
            android:label="@string/title_activity_rename_room" >
        </activity>
    </application>

</manifest> <!-- <?xml version="1.0" encoding="utf-8"?> -->
