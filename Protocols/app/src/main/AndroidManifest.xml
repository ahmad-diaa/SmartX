                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListOfClientsActivity" />
        <activity android:name=".ChatActivity" />
        <activity
            android:name=".CheckerBoard"
            android:label="@string/title_activity_checker_board" >
        </activity>
        <activity
            android:name=".GameBoard"
            android:label="@string/title_activity_game_board" >
        </activity>
        <activity
            android:name=".SelectPlayer"
            android:label="@string/title_activity_select_player" >
        </activity>
        <activity
            android:name=".playerResponse"
            android:label="@string/title_activity_player_response" >
